# OpenAI API key (required)
OPENAI_API_KEY=your_key_here

# OpenAI model to use
OPENAI_MODEL=gpt-4o-mini

# Enable OCR for image-based PDFs (recommended)
OCR_ENABLED=true

# Database (Postgres). Remove to use SQLite.
DATABASE_URL=postgresql://parser:parser@postgres:5432/parser

# Optional: custom config paths
# MY_COMPANY_CONFIG_PATH=/app/config/my_company.yaml
# MAPPINGS_PATH=/app/config/mappings.yaml
